doctype html
html(lang='en', prefix="og: http://ogp.me/ns#")
  head
    meta(charset='UTF-8')
    title shrgrp: share things &amp; make friends
    base(href='/')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/app.css')
    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Titillium+Web:200,400,700,900')

    //- Open Graph Protocol: Facebook, Google+
    meta(property="og:title", content="shrgrp")
    meta(property="og:type", content="website")
    meta(property="og:url", content="http://shrgrp.org/")
    meta(property="og:description", content="shrgrp is a network of location specific sharing communities. create or join your local groups. check what you want to share and browse what are shared by others.")
    meta(property="og:image", content="http://shrgrp.org/images/cover.png")
    meta(property="og:image:type", content="image/png")
    meta(property="og:image:width", content="1024")
    meta(property="og:image:height", content="768")

  body
    header#header

      a.logo-wrap(href='/'): img.logo(src='/images/logo.svg', width=128, height=128)

      .text-wrap
        .name: a(href='/') shrgrp
        .desc share things &amp; make friends

    block content

    footer#footer
      p.info &copy; 2017 shrgrp, a non-profit project made in aalto.
      ul.links
        li: a(href='https://fb.me/shrgrp.org', target='_blank') like us
        li: a(href='https://m.me/shrgrp.org', target='_blank') contact us

    //- Put scripts at end to avoid blocking content rendering
    script(src='/node_modules/core-js/client/shim.min.js')
    script(src='/node_modules/zone.js/dist/zone.js')
    script(src='/node_modules/systemjs/dist/system.src.js')
    script(src='/systemjs.config.js')
    script System.import('main.js').catch(function(err){ console.error(err); });
